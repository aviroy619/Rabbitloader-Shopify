<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RabbitLoader - Connect Store</title>
  <link rel="stylesheet" href="/style.css">
  <script src="https://unpkg.com/@shopify/app-bridge@3"></script>
  <script>
    // Expose env vars to frontend
    window.env = {
      APP_URL: "<%= APP_URL || '' %>",
      SHOPIFY_API_VERSION: "<%= SHOPIFY_API_VERSION || '' %>",
      SHOPIFY_API_KEY: "<%= SHOPIFY_API_KEY || '' %>"
    };
    
    // Expose app state from server
    window.appState = {
      shop: "<%= shop || '' %>",
      host: "<%= host || '' %>",
      embedded: <%= embedded || false %>,
      connected: <%= connected || false %>
    };

    // Add defer configuration function
    window.openScriptConfiguration = function() {
      var shop = new URLSearchParams(window.location.search).get("shop") || window.appState.shop;
      if (!shop) {
        console.error("Shop parameter missing");
        return;
      }
      
      var configUrl = "/shopify/configure-defer?shop=" + encodeURIComponent(shop);
      window.open(configUrl, '_blank');
    };

    // Open RabbitLoader reports
    window.openReports = function() {
      window.open("https://rabbitloader.com/account", '_blank');
    };
  </script>
  <style>
    body {
      background: #f5f7fa;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      margin: 0;
      padding: 0;
    }

    .dashboard-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 40px 20px;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .dashboard-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      padding: 40px;
      width: 100%;
      max-width: 700px;
      text-align: center;
    }

    .logo {
      width: 120px;
      height: auto;
      margin-bottom: 20px;
    }

    .store-name {
      font-size: 24px;
      font-weight: 600;
      color: #1a1a1a;
      margin-bottom: 8px;
    }

    .connection-status {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      margin-bottom: 30px;
    }

    .status-indicator {
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }

    .status-indicator.success {
      background: #28a745;
    }

    .status-indicator.error {
      background: #dc3545;
    }

    .status-text {
      font-size: 14px;
      color: #666;
    }

    .main-title {
      font-size: 32px;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 8px;
    }

    .subtitle {
      font-size: 16px;
      color: #666;
      margin-bottom: 30px;
    }

    .btn {
      padding: 14px 24px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 15px;
      font-weight: 600;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      transition: all 0.2s ease;
      margin: 8px;
    }
    
    .btn-primary {
      background: #007bff;
      color: white;
    }
    
    .btn-primary:hover {
      background: #0056b3;
      transform: translateY(-1px);
    }
    
    .btn-secondary {
      background: #6c757d;
      color: white;
    }
    
    .btn-secondary:hover {
      background: #545b62;
      transform: translateY(-1px);
    }

    .btn-config {
      background: #28a745;
      color: white;
    }

    .btn-config:hover {
      background: #218838;
      transform: translateY(-1px);
    }

    .btn-reports {
      background: #17a2b8;
      color: white;
    }

    .btn-reports:hover {
      background: #138496;
      transform: translateY(-1px);
    }

    .loading-screen {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .loading-container {
      text-align: center;
      margin-top: 20px;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #007bff;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 15px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .footer-links {
      margin-top: 40px;
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .footer-link {
      color: #666;
      text-decoration: none;
      font-size: 14px;
    }

    .footer-link:hover {
      color: #007bff;
    }

    .actions-section {
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      gap: 12px;
      align-items: center;
    }

    /* Responsive design - Mobile adjustments */
    @media (max-width: 768px) {
      .dashboard-container {
        padding: 20px 15px;
      }

      .dashboard-card {
        padding: 25px 20px;
      }

      .main-title {
        font-size: 28px;
      }

      .btn {
        width: 100%;
        max-width: 300px;
      }
    }
  </style>
  <script>
    // Initialize Shopify App Bridge for embedded app
    document.addEventListener('DOMContentLoaded', function() {
      var urlParams = new URLSearchParams(window.location.search);
      var shop = window.appState.shop || urlParams.get('shop');
      var host = window.appState.host || urlParams.get('host');
      var embedded = window.appState.embedded || (urlParams.get('embedded') === '1');
      
      console.log('App initialization:', { 
        shop: shop, 
        host: host, 
        embedded: embedded
      });
      
      // Check if we're in an embedded context
      var isEmbedded = window.top !== window.self || embedded;
      
      if (isEmbedded && shop && window.env.SHOPIFY_API_KEY) {
        try {
          var AppBridge = window['app-bridge'];
          if (AppBridge && AppBridge.createApp) {
            var appHost = host || btoa(shop + '/admin');
            
            var app = AppBridge.createApp({
              apiKey: window.env.SHOPIFY_API_KEY,
              host: appHost,
              forceRedirect: true
            });
            
            if (AppBridge.actions && AppBridge.actions.TitleBar) {
              var TitleBar = AppBridge.actions.TitleBar;
              var titleBar = TitleBar.create(app, { 
                title: 'RabbitLoader Integration' 
              });
            }
            
            console.log('App Bridge initialized successfully');
          }
        } catch (error) {
          console.error('App Bridge initialization failed:', error);
        }
      }
    });
  </script>
</head>
<body>
  <div class="dashboard-container">
    <!-- Loading State -->
    <div id="loadingState" class="loading-screen">
      <div class="dashboard-card">
        <img src="/assets/RLlogo.png" alt="RabbitLoader" class="logo">
        <div class="store-name" id="storeName">Loading...</div>
        <div class="loading-container">
          <div class="spinner"></div>
          <p>Checking connection...</p>
        </div>
      </div>
    </div>

    <!-- Disconnected State: Connect to RabbitLoader -->
    <div id="disconnectedState" class="page-state" style="display: none;">
      <div class="dashboard-card">
        <img src="/assets/RLlogo.png" alt="RabbitLoader" class="logo">
        
        <div class="store-info">
          <div class="store-name" id="storeNameDisconnected">Loading...</div>
          <div class="connection-status">
            <div class="status-indicator error"></div>
            <span class="status-text">Not Connected</span>
          </div>
        </div>
        
        <div class="disconnected-section">
          <h1 class="main-title">Get 100/100 PageSpeed</h1>
          <p class="subtitle">on Google PageSpeed Insights</p>
          <a href="#" class="btn btn-primary" id="activateBtn">Activate RabbitLoader</a>
        </div>
        
        <div class="footer-links">
          <a href="#" class="footer-link">Crash Courses</a>
          <a href="#" class="footer-link">Terms & Conditions</a>
          <a href="#" class="footer-link">Get Support</a>
        </div>
      </div>
    </div>

    <!-- Connected State: Simple Dashboard -->
    <div id="connectedState" class="page-state" style="display: none;">
      <div class="dashboard-card">
        <img src="/assets/RLlogo.png" alt="RabbitLoader" class="logo">
        
        <div class="store-info">
          <div class="store-name" id="storeNameConnected">Loading...</div>
          <div class="connection-status">
            <div class="status-indicator success"></div>
            <span class="status-text">Connected to RabbitLoader</span>
          </div>
        </div>

        <div class="connected-section">
          <h1 class="main-title">Optimization Active</h1>
          <p class="subtitle">Your store is now optimized with RabbitLoader</p>
          
          <div class="actions-section">
            <button class="btn btn-config" onclick="openScriptConfiguration()">Configure Defer Rules</button>
            <button class="btn btn-reports" onclick="openReports()">View Reports</button>
            <button class="btn btn-secondary" id="disconnectBtn">Disconnect</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/script.js"></script>
</body>
</html>