<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RabbitLoader - Connect Store</title>
  <link rel="stylesheet" href="/style.css">
  <script src="https://unpkg.com/@shopify/app-bridge@3"></script>
  <script>
    // Expose env vars to frontend
    window.env = {
      APP_URL: "<%= APP_URL || '' %>",
      SHOPIFY_API_VERSION: "<%= SHOPIFY_API_VERSION || '' %>",
      SHOPIFY_API_KEY: "<%= SHOPIFY_API_KEY || '' %>"
    };
    
    // Expose app state from server
    window.appState = {
      shop: "<%= shop || '' %>",
      host: "<%= host || '' %>",
      embedded: <%= embedded || false %>,
      connected: <%= connected || false %>
    };

    // Add defer configuration function
    window.openScriptConfiguration = function() {
      var shop = new URLSearchParams(window.location.search).get("shop") || window.appState.shop;
      if (!shop) {
        if (typeof showFlash === 'function') showFlash("Shop parameter missing", "error");
        return;
      }
      
      if (typeof showFlash === 'function') showFlash("Opening script configuration...", "info");
      var configUrl = "/shopify/configure-defer?shop=" + encodeURIComponent(shop);
      
      // Open in new tab for better experience
      window.open(configUrl, '_blank');
    };
  </script>
  <style>
    /* Desktop-First Design */
    body {
      background: #f5f7fa;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      margin: 0;
      padding: 0;
    }

    .dashboard-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .dashboard-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      padding: 40px;
      width: 100%;
      max-width: 800px;
      text-align: center;
    }

    .logo {
      width: 120px;
      height: auto;
      margin-bottom: 20px;
    }

    .store-name {
      font-size: 24px;
      font-weight: 600;
      color: #1a1a1a;
      margin-bottom: 8px;
    }

    .connection-status {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      margin-bottom: 30px;
    }

    .status-indicator {
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }

    .status-indicator.success {
      background: #28a745;
    }

    .status-indicator.error {
      background: #dc3545;
    }

    .status-text {
      font-size: 14px;
      color: #666;
    }

    .main-title {
      font-size: 32px;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 8px;
    }

    .subtitle {
      font-size: 16px;
      color: #666;
      margin-bottom: 30px;
    }

    /* Enhanced Dashboard Grid - Desktop Layout */
    .enhanced-dashboard {
      margin-top: 30px;
      text-align: left;
    }
    
    .dashboard-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      margin-bottom: 30px;
    }
    
    .psi-scores-section, .plan-section, .analytics-section, .actions-section {
      background: #f8f9fa;
      padding: 25px;
      border-radius: 10px;
      border: 1px solid #e9ecef;
    }

    .psi-scores-section {
      grid-column: 1 / -1;
    }
    
    .psi-comparison {
      display: flex;
      align-items: center;
      gap: 40px;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .score-box {
      display: flex;
      gap: 20px;
      margin-top: 15px;
    }
    
    .score {
      text-align: center;
      padding: 15px;
      border-radius: 8px;
      background: white;
      min-width: 90px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .score-value {
      display: block;
      font-size: 28px;
      font-weight: bold;
      margin-bottom: 5px;
    }
    
    .score-value.poor { color: #dc3545; }
    .score-value.average { color: #ffc107; }
    .score-value.good { color: #28a745; }
    
    .score-label {
      font-size: 13px;
      color: #666;
      font-weight: 500;
    }
    
    .improvement-arrow {
      font-size: 32px;
      color: #28a745;
      font-weight: bold;
    }
    
    .section-title {
      font-size: 18px;
      font-weight: 600;
      color: #1a1a1a;
      margin-bottom: 15px;
    }

    .plan-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 20px;
    }
    
    .plan-details h4 {
      margin: 0 0 8px 0;
      color: #007bff;
      font-size: 16px;
    }
    
    .plan-details p {
      margin: 4px 0;
      color: #666;
      font-size: 14px;
    }
    
    .analytics-stats {
      margin: 15px 0;
    }
    
    .stat {
      text-align: center;
      padding: 20px;
      background: white;
      border-radius: 8px;
      margin-bottom: 15px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .stat-value {
      display: block;
      font-size: 32px;
      font-weight: bold;
      color: #1976d2;
    }
    
    .stat-label {
      font-size: 14px;
      color: #666;
      margin-top: 5px;
    }
    
    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
    
    .btn {
      padding: 14px 24px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 15px;
      font-weight: 600;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      transition: all 0.2s ease;
      min-height: 48px;
      box-sizing: border-box;
    }
    
    .btn-primary {
      background: #007bff;
      color: white;
    }
    
    .btn-primary:hover {
      background: #0056b3;
      transform: translateY(-1px);
    }
    
    .btn-secondary {
      background: #6c757d;
      color: white;
    }
    
    .btn-secondary:hover {
      background: #545b62;
      transform: translateY(-1px);
    }
    
    .btn-outline {
      background: white;
      color: #007bff;
      border: 2px solid #007bff;
    }
    
    .btn-outline:hover {
      background: #007bff;
      color: white;
      transform: translateY(-1px);
    }

    .btn-config {
      background: #28a745;
      color: white;
    }

    .btn-config:hover {
      background: #218838;
      transform: translateY(-1px);
    }

    .loading-screen {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .loading-container {
      text-align: center;
      margin-top: 20px;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #007bff;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 15px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .footer-links {
      margin-top: 40px;
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .footer-link {
      color: #666;
      text-decoration: none;
      font-size: 14px;
    }

    .footer-link:hover {
      color: #007bff;
    }
    
    .flash-message {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 12px 20px;
      border-radius: 6px;
      color: white;
      font-weight: 500;
      z-index: 1000;
      opacity: 1;
      transition: opacity 0.5s;
    }
    
    .flash-message.success {
      background: #28a745;
    }
    
    .flash-message.error {
      background: #dc3545;
    }
    
    .flash-message.info {
      background: #17a2b8;
    }
    
    .flash-message.fade-out {
      opacity: 0;
    }

    /* Responsive design - Mobile adjustments */
    @media (max-width: 768px) {
      .dashboard-container {
        padding: 20px 15px;
      }

      .dashboard-card {
        padding: 25px 20px;
      }

      .dashboard-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }
      
      .psi-comparison {
        flex-direction: column;
        gap: 20px;
      }
      
      .improvement-arrow {
        transform: rotate(90deg);
      }
      
      .plan-info {
        flex-direction: column;
        align-items: flex-start;
      }

      .main-title {
        font-size: 28px;
      }

      .score-value {
        font-size: 24px;
      }
    }
  </style>
  <script>
    // Initialize Shopify App Bridge for embedded app
    document.addEventListener('DOMContentLoaded', function() {
      // Use server-provided state first, then fall back to URL params
      var urlParams = new URLSearchParams(window.location.search);
      var shop = window.appState.shop || urlParams.get('shop');
      var host = window.appState.host || urlParams.get('host');
      var embedded = window.appState.embedded || (urlParams.get('embedded') === '1');
      
      console.log('App initialization:', { 
        shop: shop, 
        host: host, 
        embedded: embedded,
        serverState: window.appState,
        urlParams: urlParams.toString()
      });
      
      // Check if we're in an embedded context
      var isEmbedded = window.top !== window.self || embedded;
      
      if (isEmbedded && shop && window.env.SHOPIFY_API_KEY) {
        try {
          // Initialize App Bridge
          var AppBridge = window['app-bridge'];
          if (AppBridge && AppBridge.createApp) {
            // Use host parameter or generate from shop
            var appHost = host || btoa(shop + '/admin');
            
            console.log('Initializing App Bridge with:', {
              apiKey: window.env.SHOPIFY_API_KEY,
              host: appHost
            });
            
            var app = AppBridge.createApp({
              apiKey: window.env.SHOPIFY_API_KEY,
              host: appHost,
              forceRedirect: true
            });
            
            // Create title bar if available
            if (AppBridge.actions && AppBridge.actions.TitleBar) {
              var TitleBar = AppBridge.actions.TitleBar;
              var titleBar = TitleBar.create(app, { 
                title: 'RabbitLoader Integration' 
              });
            }
            
            console.log('App Bridge initialized successfully');
          } else {
            console.error('App Bridge library not loaded properly');
          }
        } catch (error) {
          console.error('App Bridge initialization failed:', error);
        }
      } else if (!shop) {
        console.log('No shop parameter found, need Shopify authentication');
        if (!isEmbedded) {
          console.log('Standalone mode - waiting for manual shop entry');
        }
      } else {
        console.log('App loaded in standalone mode for shop:', shop);
      }
    });
  </script>
